{
    "manifest_version": 2,
    "name": "Supertab",
    "version": "0.1.0",
    "description": "A comprehensive New Tab",
    "icons": {
            "16": "img/icon_16x16.png",
            "32":"img/icon_32x32.png",
            "48": "img/icon_48x48.png",
            "128": "img/icon_128x128.png"
    },
    "chrome_url_overrides": {
            "newtab": "newtab.html"
    },
    "permissions": [
        "topSites",
        "<all_urls>",
        "history",
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_icon": {
            "19": "img/radio_disabled_19x19.png",
            "38": "img/radio_disabled_38x38.png"
        },
        "default_title": "Read later"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
